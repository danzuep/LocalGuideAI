<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="LocalGuideAI.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fonts="clr-namespace:LocalGuideAI.Resources.Fonts">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <FontImageSource
                        x:Key="settingsFontIcon"
                        FontFamily="Material"
                        Glyph="{x:Static fonts:Icon.Settings}"
                        Color="{AppThemeBinding Dark={StaticResource White},
                                                Light={StaticResource Black}}" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
